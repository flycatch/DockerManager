/* ğŸŒ™ Header Title */
.header-title {
  content-align: center middle;
  color: #d6ed64;
  background: #313244;
  padding: 0 1;
  text-style: bold;
  border-bottom: solid #b4befe;
  margin: 1 0;
}

/* ğŸ“¦ Container List */
#container-list {
  padding: 1;
  margin: 1 0;
  height: 1fr;
  overflow: auto;
  border: round #45475a;
  background: #1e1e2e;
}

.container-card {
  padding: 0 1;
  border: round #585b70;
  layout: grid;
  grid-size: 3;
  grid-columns: 2fr 2fr 3fr;
  background: #313244;
}

/* ğŸŸ¡ Focused Container */
.container-card:focus {
  border: round #d6ed64;
  background: #2f3038;
  color: #d6ed64;
}

/* ğŸŸ£ Hovered Container */
.container-card:hover {
  background: #45475a;
  outline: solid #7f849c;
}

/* ğŸ”¤ Column Styling */
.col {
  padding: 0;
  content-align: left middle;
}

.col.name {
  text-style: bold;
  color: #94e2d5;
}

.col.image {
  color: #a6e3a1;
}

.col.status {
  color: #f9e2af;
}

/* ğŸŒŒ Screen Layout */
Screen {
  align: center middle;
  content-align: center middle;
  background: #1e1e2e 95%;
  padding: 1;
}

/* ğŸ’¬ Modal Card */
.modal-card {
  layout: vertical;
  padding: 1 2;
  width: 100%;
  max-width: 100%;
  border: round #d6ed64;
  background: #313244;
}

/* ğŸ“ Menu Title */
.menu-title {
  text-style: bold;
  color: #d6ed64;
  padding: 1;
  content-align: center middle;
  border: round #585b70;
  margin: 1 0;
  background: #1e1e2e;
}

/* âŒ¨ï¸ Menu Key Hints */
.menu-keys {
  color: #a6adc8;
  text-style: italic;
  content-align: center middle;
  padding: 1 0 0 0;
}

/* ğŸ” Input Field Base */
.menu-input,
#log-filter {
  padding: 0 1;
  border: round #585b70;
  background: #1e1e2e;
  color: #cdd6f4;
}

/* ğŸªµ Log Container */
.log-container {
  height: 1fr;
  overflow: auto;
  background: #1e1e2e;
  border: round #45475a;
  margin: 1 0;
}

/* ğŸ“¤ Log Output */
#log-output.log-text {
  padding: 1;
  color: #cdd6f4;
  background: transparent;
  text-wrap: wrap;
}

/* ğŸ“œ Scroll View for Logs */
ScrollView#logs {
  height: 1fr;
  padding: 1;
  background: #1e1e2e;
  color: #cdd6f4;
  border: round #89b4fa;
  margin: 1 0;
}

/* ğŸ–¥ï¸ Shell Container */
.shell-container {
  height: 1fr;
  overflow: auto;
  background: #000000;
  border: round #5e81ac;
  margin: 1 0;
  padding: 1;
}

/* ğŸ“¤ Shell Output Text */
#shell-output.shell-text {
  padding: 1;
  color: #ffffff;
  background: #000000;
  text-wrap: wrap;
  text-style: bold;
  scrollbar-gutter: stable;
  scrollbar-color: #585b70 #1e1e2e;
  width: 100%;
}

/* ğŸ’» Shell Input Field */
#shell-input.menu-input {
  background: #1e1e1e;
  border: round #5e81ac;
  color: #ffffff;
  text-style: bold;
  padding: 0 1;
  margin: 1 0;
}

/* ğŸ§  Command History Hover/Focus */
#shell-input:focus {
  border: round #d6ed64;
  background: #2f3038;
  color: #d6ed64;
}

/* âŒ¨ï¸ Input Prompt Styling */
.shell-input-prompt {
  color: #94e2d5;
  text-style: italic;
  padding: 0 1;
}

/* ğŸ§¾ Error Lines in Shell Output */
.shell-text .error {
  color: #f38ba8;
  text-style: bold;
}

/* âš ï¸ Warning Lines in Shell Output */
.shell-text .warning {
  color: #f9e2af;
  text-style: italic;
}

/* âœ… Info Lines in Shell Output */
.shell-text .info {
  color: #a6e3a1;
}

/* ğŸ”„ Command Echo */
.shell-text .echo {
  color: #89dceb;
  text-style: bold;
}

/* Project Tree */
#project-tree {
  padding: 1 2;
  border: round $accent;
  width: 30%;
  height: 100%;
  background: $boost;       
  color: $text;            
  scrollbar-gutter: stable;
}

/* Container List */
#container-list {
  padding: 1 2;
  overflow: auto;
  height: 100%;
  border: round $surface;
  background: $panel;
  scrollbar-gutter: stable;
}



#project-tree {
  border: round $accent;
  padding: 1 2;
  margin: 1;
  background: $boost;
  height: 1fr;
  overflow: auto;
  scrollbar-gutter: stable;
}

.tree--guides {
  color: $primary;
}

.tree--label {
  padding-left: 1;
  color: $text;
}

.tree--cursor {
  color: $accent-lighten-2;
  background: $accent-darken-3;
  text-style: bold;
}

.tree--label:focus {
  background: $surface-darken-1;
  color: $accent;
}

