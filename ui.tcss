

/* ðŸ“¦ Container List */
#container-list {
  margin: 0 0;
  height: 1fr;
  overflow: auto;
  border: round #45475a;
  background: #1e1e2e;
}
#container-list:focus-within {
    border: round #89b4fa;    
}


.container-card {
  padding: 0;
  border: none;
  layout: grid;
  grid-size: 6;
  grid-columns: 1fr 2fr 2fr 1fr 2fr 1.5fr;
  # background: #313244;
  margin-bottom: 0;
  margin-left:1;
  margin-right:1;
  margin-top:0;
}

/* ðŸŸ¡ Focused Container */
.container-card:focus {
  background: #2f3038;
}


/* ðŸŸ£ Hovered Container */
.container-card:hover {
  padding: 0;
  background: #45475a;
}

/* ðŸ”¤ Column Styling */
.col {
  padding: 0;
  content-align: left middle;
}
.col.name {
  padding:0;
  text-style: bold;
  color: #94e2d5;
}

.col.image {
  padding: 0;
  color: #a6e3a1;
}

.col.status {
  padding: 0;
  color: #f9e2af;
}


/* Add styles for new columns */
.col.ports {
  color: #cba6f7;
  content-align: center middle;
}

.col.created {
  color: #f5c2e7;
  content-align: center middle;
}

.col.id {
  color: #a6adc8;
}

.status-running {
    color: $success;
    text-style: bold;
}

.status-stopped {
    color: $error;
    text-style: italic;
}

.status-exited {
    color: $warning;
    text-style: italic;
}

/* ðŸŒŒ Screen Layout */
Screen {
  align: center middle;
  content-align: center middle;
  background: #1e1e2e 95%;
  padding: 0;
}

/* ðŸ’¬ Modal Card */
.modal-card {
  layout: vertical;
  padding: 01 2;
  width: 100%;
  max-width: 100%;
  border: round #d6ed64;
  background: #313244;
}

/* ðŸ“ Menu Title */
.menu-title {
  text-style: bold;
  color: #d6ed64;
  padding: 1;
  content-align: center middle;
  border: round #585b70;
  margin: 1 0;
  background: #1e1e2e;
}

/* âŒ¨ï¸ Menu Key Hints */
.menu-keys {
  color: #a6adc8;
  text-style: italic;
  content-align: center middle;
  padding: 0 0 0 0;
}

/* ðŸ” Input Field Base */
.menu-input,
#log-filter {
  padding: 0 1;
  border: round #585b70;
  background: #1e1e2e;
  color: #cdd6f4;
}

/* ðŸªµ Log Container */
.log-container {
  height: 1fr;
  overflow: auto;
  background: #1e1e2e;
  border: round #45475a;
  margin: 1 0;
}

/* ðŸ“¤ Log Output */
#log-output.log-text {
  padding: 1;
  color: #cdd6f4;
  background: transparent;
  text-wrap: wrap;
}

/* ðŸ“œ Scroll View for Logs */
ScrollView#logs {
  height: 1fr;
  padding: 1;
  background: #1e1e2e;
  color: #cdd6f4;
  border: round #89b4fa;
  margin: 1 0;
}

/* ðŸ–¥ï¸ Shell Container */
.shell-container {
  height: 1fr;
  overflow: auto;
  background: #000000;
  border: round #5e81ac;
  margin: 1 0;
  padding: 1;
}

/* ðŸ“¤ Shell Output Text */
#shell-output.shell-text {
  padding: 1;
  color: #ffffff;
  background: #000000;
  text-wrap: wrap;
  text-style: bold;
  scrollbar-gutter: stable;
  scrollbar-color: #585b70 #1e1e2e;
  width: 100%;
}
.shell-text {
  text-style: bold dim;
  height: auto;
  padding: 1 2;
  background: $surface;
  color: $text;
}

/* ðŸ’» Shell Input Field */
#shell-input.menu-input {
  background: #1e1e1e;
  border: round #5e81ac;
  color: #ffffff;
  text-style: bold;
  padding: 0 1;
  margin: 1 0;
}

/* ðŸ§  Command History Hover/Focus */
#shell-input:focus {
  border: round #d6ed64;
  background: #2f3038;
  color: #d6ed64;
}

/* âŒ¨ï¸ Input Prompt Styling */
.shell-input-prompt {
  color: #94e2d5;
  text-style: italic;
  padding: 0 1;
}

/* ðŸ§¾ Error Lines in Shell Output */
.shell-text .error {
  color: #f38ba8;
  text-style: bold;
}

/* âš ï¸ Warning Lines in Shell Output */
.shell-text .warning {
  color: #f9e2af;
  text-style: italic;
}

/* âœ… Info Lines in Shell Output */
.shell-text .info {
  color: #a6e3a1;
}

/* ðŸ”„ Command Echo */
.shell-text .echo {
  color: #89dceb;
  text-style: bold;
}


/* ðŸ§© Compose Projects Layout */
#projects-layout {
  layout: horizontal;
  border: round #585b70;
  background: #1e1e2e;
  height: 1fr;
  opacity: 0.6;
  margin: 0 0;
}


#projects-layout:focus-within {
    opacity: 1;    
}
/* ðŸŒ³ Compose Project Tree */
#project-tree {
  border: round #79879eff;
  padding: 1 1;
  margin: 0 0;
  background: #1e1e2e;
  height: 1fr;
  overflow: auto;
  width: 50;
  color: #cdd6f4;
  scrollbar-gutter: stable;
}
/* Highlight when focused */
#project-tree:focus-within {
    border: round #89b4fa;    /* active blue */
}

.tree--label {
  padding-left: 2;
  color: #cdd6f4;
  text-style: bold;
}

.tree--cursor {
  background: #313244;
  color: #f9e2af;
  text-style: bold reverse;
}

.tree--guides {
  color: #7f849c;
}
/* Add this to your CSS */
ProjectsTab:focus {
    border: dashed  #89b4fa;
}

#projects-layout:focus-within {
    border: round #89b4fa;
}


/* Style for the standalone tab */
#tab-uncategorized {
    border: round #89b4fa;
}

/* Active tab styling */
#tab-uncategorized.-active {
    border: double blue;
    background: blue;
    color: white;
}

/* Search input styling - hidden by default */
#uncategorized-search {
    dock: bottom;
    border: round #585b70;
    background: #1e1e2e;
    color: #cdd6f4;
    width: 40;
    margin: 0 0;
    padding: 0 0;
    display: none; /* Hidden by default */
    layer: overlay;
}

#uncategorized-search.search-active {
    border: round #89b4fa;
    background: #1e1e2e;
    width: 40;
    padding: 0 0;
}

#uncategorized-search:focus {
    border: round #89b4fa;
    background: #1e1e2e;
    padding: 0 0;

}

/* ðŸŽ› Floating Filter Dropdown */
#filter-dropdown {
  dock: bottom;
  margin: 0 0;
  color: #cdd6f4;
  width: 40;
  padding: 0 0;
  border: round #89b4fa;
  display: none; /* hidden by default */
  layer: overlay; /* float above all */
}

/* Focused filter dropdown */
#filter-dropdown:focus {
  color: #d6ed64;
  border: round #89b4fa;
}

#filter-dropdown > .option-list {
  border: heavy #585b70;       /* border around the opened list */
  background: #1e1e2e;         /* background of list */
  padding: 0 1;                /* inner spacing for options */
  layer: overlay;              /* ensure it floats above content */
  width: 40;                 /* can match parent width */
}

/* Individual options */
#filter-dropdown Option {
  padding: 0 1;                /* spacing inside each option */
}

#filter-dropdown Option:hover {
  background: #3a3b47;         /* hover highlight */
  color: #d6ed64;
}

#filter-dropdown Option:disabled {
  color: #555555;              /* greyed out disabled option */
}

.hidden {
    display: none;
}

#no-results-message {
    margin: 22;
    text-align: center;
    padding: 0;
    color: #888888;  /* Changed from text-muted to a valid color */

}

#no-results-message.hidden {
    display: none;
}

/* Project search input */
#project-search {
    display: none;                  /* hidden by default */
    border: round #89b4fa;
    background: #1e1e2e;
    padding: 0 0;
    height: 3;                      /* consistent height */
    width: 24.5%;                    /* full width */
    margin: 0 0;                /* little spacing below */
    layer: overlay;
    dock: bottom;
  
}

/* When search is active */
#project-search.search-active {
    display: block;
    border: round #89b4fa;
    background: #1e1e2e;
    color: #cdd6f4;
}

