

/* ğŸ“¦ Container List */
#container-list {
  margin: 0 0;
  height: 1fr;
  overflow: auto;
  border: round #45475a;
  background: #1e1e2e;
}
#container-list:focus-within {
    border: round #89b4fa;    
}


.container-card {
  padding: 0;
  border: none;
  layout: grid;
  grid-size: 3;
  grid-columns: 2fr 3fr 2fr;
  # background: #313244;
  margin-bottom: 0;
  margin-left:1;
  margin-right:1;
  margin-top:0;
}

/* ğŸŸ¡ Focused Container */
.container-card:focus {
  background: #2f3038;
}


/* ğŸŸ£ Hovered Container */
.container-card:hover {
  padding: 0;
  background: #45475a;
}

/* ğŸ”¤ Column Styling */
.col {
  padding: 0;
  content-align: left middle;
}
.col.name {
  padding:0;
  text-style: bold;
  color: #94e2d5;
}

.col.image {
  padding: 0;
  color: #a6e3a1;
}

.col.status {
  padding: 0;
  color: #f9e2af;
}

.status-running {
    color: $success;
    text-style: bold;
}

.status-stopped {
    color: $error;
    text-style: italic;
}

.status-exited {
    color: $warning;
    text-style: italic;
}

/* ğŸŒŒ Screen Layout */
Screen {
  align: center middle;
  content-align: center middle;
  background: #1e1e2e 95%;
  padding: 0;
}

/* ğŸ’¬ Modal Card */
.modal-card {
  layout: vertical;
  padding: 01 2;
  width: 100%;
  max-width: 100%;
  border: round #d6ed64;
  background: #313244;
}

/* ğŸ“ Menu Title */
.menu-title {
  text-style: bold;
  color: #d6ed64;
  padding: 1;
  content-align: center middle;
  border: round #585b70;
  margin: 1 0;
  background: #1e1e2e;
}

/* âŒ¨ï¸ Menu Key Hints */
.menu-keys {
  color: #a6adc8;
  text-style: italic;
  content-align: center middle;
  padding: 0 0 0 0;
}

/* ğŸ” Input Field Base */
.menu-input,
#log-filter {
  padding: 0 1;
  border: round #585b70;
  background: #1e1e2e;
  color: #cdd6f4;
}

/* ğŸªµ Log Container */
.log-container {
  height: 1fr;
  overflow: auto;
  background: #1e1e2e;
  border: round #45475a;
  margin: 1 0;
}

/* ğŸ“¤ Log Output */
#log-output.log-text {
  padding: 1;
  color: #cdd6f4;
  background: transparent;
  text-wrap: wrap;
}

/* ğŸ“œ Scroll View for Logs */
ScrollView#logs {
  height: 1fr;
  padding: 1;
  background: #1e1e2e;
  color: #cdd6f4;
  border: round #89b4fa;
  margin: 1 0;
}

/* ğŸ–¥ï¸ Shell Container */
.shell-container {
  height: 1fr;
  overflow: auto;
  background: #000000;
  border: round #5e81ac;
  margin: 1 0;
  padding: 1;
}

/* ğŸ“¤ Shell Output Text */
#shell-output.shell-text {
  padding: 1;
  color: #ffffff;
  background: #000000;
  text-wrap: wrap;
  text-style: bold;
  scrollbar-gutter: stable;
  scrollbar-color: #585b70 #1e1e2e;
  width: 100%;
}
.shell-text {
  text-style: bold dim;
  height: auto;
  padding: 1 2;
  background: $surface;
  color: $text;
}

/* ğŸ’» Shell Input Field */
#shell-input.menu-input {
  background: #1e1e1e;
  border: round #5e81ac;
  color: #ffffff;
  text-style: bold;
  padding: 0 1;
  margin: 1 0;
}

/* ğŸ§  Command History Hover/Focus */
#shell-input:focus {
  border: round #d6ed64;
  background: #2f3038;
  color: #d6ed64;
}

/* âŒ¨ï¸ Input Prompt Styling */
.shell-input-prompt {
  color: #94e2d5;
  text-style: italic;
  padding: 0 1;
}

/* ğŸ§¾ Error Lines in Shell Output */
.shell-text .error {
  color: #f38ba8;
  text-style: bold;
}

/* âš ï¸ Warning Lines in Shell Output */
.shell-text .warning {
  color: #f9e2af;
  text-style: italic;
}

/* âœ… Info Lines in Shell Output */
.shell-text .info {
  color: #a6e3a1;
}

/* ğŸ”„ Command Echo */
.shell-text .echo {
  color: #89dceb;
  text-style: bold;
}




/* ğŸ§© Compose Projects Layout */
#projects-layout {
  layout: horizontal;
  border: round #585b70;
  background: #1e1e2e;
  height: 1fr;
  opacity: 0.6;
  margin: 0 0;
}


#projects-layout:focus-within {
    opacity: 1;    
}
/* ğŸŒ³ Compose Project Tree */
#project-tree {
  border: round #79879eff;
  padding: 1 1;
  margin: 0 0;
  background: #1e1e2e;
  height: 1fr;
  overflow: auto;
  width: 50;
  color: #cdd6f4;
  scrollbar-gutter: stable;
}
/* Highlight when focused */
#project-tree:focus-within {
    border: round #89b4fa;    /* active blue */
}

.tree--label {
  padding-left: 2;
  color: #cdd6f4;
  text-style: bold;
}

.tree--cursor {
  background: #313244;
  color: #f9e2af;
  text-style: bold reverse;
}

.tree--guides {
  color: #7f849c;
}
/* Add this to your CSS */
ProjectsTab:focus {
    border: dashed  #89b4fa;
}

#projects-layout:focus-within {
    border: round #89b4fa;
}


/* Style for the standalone tab */
#tab-uncategorized {
    border: round #89b4fa;
}

/* Active tab styling */
#tab-uncategorized.-active {
    border: double blue;
    background: blue;
    color: white;
}
